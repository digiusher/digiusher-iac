###############################################################################
# Scenario 3: Existing Billing Export
#
# For customers who already have BigQuery billing export configured.
# Terraform will NOT create a new dataset - it will only grant DigiUsher
# access to your existing dataset.
#
# To find your existing dataset:
#   1. Go to GCP Console > Billing > Billing export
#   2. Note the project and dataset name shown for "Detailed usage cost"
###############################################################################

# Required - Replace with your values
project_id         = "my-billing-project"       # Project where billing export dataset lives
organization_id    = "123456789012"
billing_account_id = "ABCDEF-123456-ABCDEF"

# Point to your existing billing export dataset
create_bigquery_dataset   = false
billing_export_dataset_id = "my_existing_billing_dataset"   # Your existing dataset ID
bigquery_location         = "US"                            # Must match your existing dataset location
